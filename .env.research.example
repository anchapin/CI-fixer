# Research Features - Environment Configuration

# =============================================================================
# RESEARCH FEATURES - STAGED ROLLOUT
# Set to 'true' to enable each feature
# =============================================================================

# Phase 1: Context Compression (60-70% token reduction)
# Compresses large error logs using ATTENTION-RAG techniques
ENABLE_CONTEXT_COMPRESSION=false
COMPRESSION_RATIO=6.0

# Phase 2: Semantic Code Search (50-70% better localization)
# Uses TF-IDF embeddings for intelligent file search
ENABLE_SEMANTIC_SEARCH=false
SEMANTIC_SEARCH_WEIGHT=0.7

# Phase 3: Enhanced Knowledge Base (50-80% better retrieval)
# Dual-encoder retrieval system for fix patterns
ENABLE_ENHANCED_KB=false
KB_SIMILARITY_THRESHOLD=0.6

# Phase 4: Thompson Sampling (30-40% more problems solved)
# Adaptive iteration limits using bandit algorithms
ENABLE_THOMPSON_SAMPLING=false
MAX_ADAPTIVE_ITERATIONS=15

# Phase 5: Multi-Agent Collaboration (2-3x speedup)
# Parallel execution with specialized agents
ENABLE_MULTI_AGENT=false
MAX_PARALLEL_AGENTS=5

# Phase 6: Reflection & Learning (20-30% improvement over time)
# Self-improvement through failure analysis
ENABLE_REFLECTION=false
LEARNING_RETENTION_DAYS=30

# =============================================================================
# STAGED ROLLOUT RECOMMENDATIONS
# =============================================================================

# Week 1: Enable Context Compression only
# ENABLE_CONTEXT_COMPRESSION=true

# Week 2: Add Semantic Search
# ENABLE_SEMANTIC_SEARCH=true

# Week 3: Add Enhanced KB
# ENABLE_ENHANCED_KB=true

# Week 4: Add Thompson Sampling
# ENABLE_THOMPSON_SAMPLING=true

# Week 5: Add Multi-Agent
# ENABLE_MULTI_AGENT=true

# Week 6: Add Reflection
# ENABLE_REFLECTION=true

# =============================================================================
# MONITORING & METRICS
# =============================================================================

# Enable detailed logging for research features
RESEARCH_FEATURES_LOGGING=true

# Metrics collection endpoint (optional)
# METRICS_ENDPOINT=https://your-metrics-service.com/api/metrics
